{
  "ci": {
    "collect": {
      "startServerCommand": "bun run start",
      "url": [
        "http://localhost:3000",
        "http://localhost:3000/login",
        "http://localhost:3000/dashboard",
        "http://localhost:3000/dashboard/countries",
        "http://localhost:3000/dashboard/regions",
        "http://localhost:3000/dashboard/hosts",
        "http://localhost:3000/dashboard/analytics",
        "http://localhost:3000/dashboard/search"
      ],
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop",
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1
        }
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.9 }],
        "categories:accessibility": ["error", { "minScore": 0.95 }],
        "categories:best-practices": ["error", { "minScore": 0.95 }],
        "categories:seo": ["error", { "minScore": 0.95 }],
        
        "first-contentful-paint": ["error", { "maxNumericValue": 1800 }],
        "largest-contentful-paint": ["error", { "maxNumericValue": 2500 }],
        "cumulative-layout-shift": ["error", { "maxNumericValue": 0.1 }],
        "total-blocking-time": ["error", { "maxNumericValue": 300 }],
        "speed-index": ["error", { "maxNumericValue": 3000 }],
        
        "interactive": ["error", { "maxNumericValue": 3000 }],
        "max-potential-fid": ["error", { "maxNumericValue": 100 }],
        
        "uses-long-cache-ttl": "off",
        "uses-rel-preconnect": "warn",
        "uses-responsive-images": "warn",
        "offscreen-images": "warn",
        "unminified-css": "error",
        "unminified-javascript": "error",
        "unused-css-rules": "warn",
        "unused-javascript": "warn",
        "modern-image-formats": "warn",
        "uses-optimized-images": "warn",
        "uses-text-compression": "error",
        "uses-http2": "warn",
        
        "dom-size": ["warn", { "maxNumericValue": 1500 }],
        "bootup-time": ["warn", { "maxNumericValue": 3000 }],
        "mainthread-work-breakdown": ["warn", { "maxNumericValue": 4000 }],
        "font-display": "warn",
        "third-party-summary": "warn"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
